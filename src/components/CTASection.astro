---
interface Props {
  title: string;
  buttonHref: string;
  buttonText: string;
}

const { title, buttonHref, buttonText } = Astro.props as Props;
---

<section class="section-cta bg-osp-soft text-osp">
  <div class="shell">
    <div class="section__inner flex flex-col items-start gap-4 md:flex-row md:items-center md:justify-between">
      <h4 class="text-osp-accent">
        {title}
      </h4>

      <div class="section__actions">
        <a href={buttonHref} class="btn btn-osp-primary">
          {buttonText}
        </a>
      </div>
    </div>
  </div>
</section>
